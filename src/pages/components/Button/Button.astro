---
import './Button.css';

const { onClick } = Astro.props;
---

<div class="relative z-[1] w-fit">
  <a
    href="#registration"
    class="button flex h-[68px] shrink-0 items-center px-[69px] whitespace-nowrap text-black"
    onclick={onClick}
  >
    <slot />
  </a>
  <div class="button-first-layer"></div>
  <div class="button-second-layer"></div>
</div>
