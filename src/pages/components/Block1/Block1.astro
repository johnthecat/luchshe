---
import ScrollBlock from './ScrollBlock.astro';
import Description from './Description.astro';
---

<section
  id="block-1"
  class="relative mt-[20px] flex h-[200vh] w-full min-w-[1200px] gap-[80px] rounded-t-[30px] bg-[#F2F1F3] px-[10px] pt-[20px] pb-[60px] text-[#17293B]"
>
  <ScrollBlock />
  <Description />
</section>

<script>
  import { gsap } from 'gsap';

  const block = document.querySelector('#block-1');
  const tl = gsap.timeline();

  tl.fromTo(block, { autoAlpha: 0, y: 50 }, { delay: 0.5, duration: 0.5, autoAlpha: 1, y: 0 });
</script>
