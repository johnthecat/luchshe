---
import ScrollLine from './ScrollLine.astro';
---

<div id="block-2" class="col-span-12">
  <section class="relative bg-[#F2F1F3] -top-px h-[400px] text-[#17293B] rounded-b-[30px]"></section>
  <ScrollLine />
</div>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  const block = document.querySelector('#block-2');
  if (block) {
    const anim = gsap.fromTo(block, { autoAlpha: 0, y: 50 }, { delay: 0.5, duration: 0.5, autoAlpha: 1, y: 0 });
    ScrollTrigger.create({
      trigger: block,
      animation: anim,
      toggleActions: 'play none none none',
      once: true,
    });
  }
</script>
